<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagePickerActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_textimage"
            android:contentDescription="@string/selectedimage" />

        <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:id="@+id/get_text_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/get_text"
            android:textOff="@string/get_text"
            android:textOn="@string/get_text"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:backgroundTint="@color/md_indigo_600"
            android:background="@color/md_indigo_600"
            app:borderWidth="3dp"
            app:checkedColor="@color/md_indigo_600"
            app:uncheckedColor="@color/md_indigo_600"
            app:uncheckedTextColor="#ffffff"
            app:checkedTextColor="#ffffff"
            app:radius="7dp"
            android:layout_margin="8dp">
        </me.rishabhkhanna.customtogglebutton.CustomToggleButton>

        <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:id="@+id/select_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/select_image"
            android:textOff="@string/select_image"
            android:textOn="@string/select_image"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:backgroundTint="@color/md_light_blue_700"
            android:background="@color/md_light_blue_700"
            app:borderWidth="3dp"
            app:checkedColor="@color/md_light_blue_700"
            app:uncheckedColor="@color/md_light_blue_700"
            app:uncheckedTextColor="#ffffff"
            app:checkedTextColor="#ffffff"
            app:radius="7dp"
            android:layout_margin="8dp">
        </me.rishabhkhanna.customtogglebutton.CustomToggleButton>

        <Spinner
            android:id="@+id/lang_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/lang_arrays"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:prompt="@string/lang_prompt"
            android:textAlignment="center"
            android:dropDownSelector="#ddeeff"
            android:alwaysDrawnWithCache="true"/>

        <EditText
            android:hint="@string/retrieved_text"
            android:id="@+id/textHolder"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:inputType="textAutoCorrect|textMultiLine|text"
            android:minLines="4"
            android:maxLines="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        fab:menu_labels_singleLine="true"
        fab:menu_animationDelayPerItem="0"
        app:menu_colorNormal="@color/md_light_blue_A700"
        app:menu_colorPressed="@color/md_light_blue_500"
        app:menu_colorRipple="@color/md_light_blue_A100"
        fab:menu_labels_maxLines="2"
        fab:menu_labels_ellipsize="end">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/cutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cut_padded"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:layout_margin="10dp"
            style="@style/MenuButtonsSmall"
            app:fab_size="mini"
            fab:fab_label="Cut" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/copyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/copy_padded"
            style="@style/MenuButtonsSmall"
            app:rippleColor="@color/md_teal_600"
            app:fab_size="mini"
            fab:fab_label="Copy" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/pdf_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MenuButtonsSmall"
            app:rippleColor="@color/md_teal_800"
            android:src="@drawable/pdf_padded"
            fab:fab_label="PDF"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/qr_generator_fab_button"
            style="@style/MenuButtonsSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qr_padded"
            app:fab_size="mini"
            app:rippleColor="@color/md_teal_800"
            fab:fab_label="qrGenerator" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/translateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/md_teal_700"
            style="@style/MenuButtonsSmall"
            android:src="@drawable/translate_padded"
            app:fab_size="mini"
            fab:fab_label="Translate" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MenuButtonsSmall"
            app:rippleColor="@color/md_teal_800"
            android:src="@drawable/share_padded"
            fab:fab_label="Share"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/speakButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/md_teal_700"
            style="@style/MenuButtonsSmall"
            android:src="@drawable/speak"
            app:fab_size="mini"
            fab:fab_label="Speak" />

    </com.github.clans.fab.FloatingActionMenu>

</android.support.constraint.ConstraintLayout>
